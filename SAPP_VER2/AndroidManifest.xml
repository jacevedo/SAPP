<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.profesores.sapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cl.profesores.sapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cl.profesores.sapp.MenuAplicacion"
            android:label="@string/title_activity_menu_aplicacion"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="cl.profesores.sapp.MenuAplicacion" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="cl.profesores.sapp.Lista"
            android:label="@string/title_activity_lista"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="cl.profesores.sapp.Lista" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="cl.profesores.sapp.ListaAlumnos"
            android:label="@string/title_activity_lista_alumnos"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="cl.profesores.sapp.ListaAlumnos" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="cl.profesores.sapp.MenuPlanificacion"
            android:label="@string/title_activity_menu_planificacion" >
            <intent-filter>
                <action android:name="cl.profesores.sapp.MenuPlanificacion" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="cl.profesores.sapp.ResumenClase"
            android:label="@string/title_activity_resumen_clase" >
            <intent-filter>
                <action android:name="cl.profesores.sapp.ResumenClase" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
