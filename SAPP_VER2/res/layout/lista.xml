<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".Lista" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sapp_logo" />

    <Spinner
        android:id="@+id/spnListaInstitucion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spnListaCursos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="spnListaCurso" />

    <Button
        android:id="@+id/btnListaAlumnos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_chico"
        android:text="Pasar la Lista" />

</LinearLayout>