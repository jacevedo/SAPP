<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >
<ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sapp_logo" />
    
    <Spinner
        android:id="@+id/spInstitucion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="spinerInstitucion" />

    <Spinner
        android:id="@+id/spCursos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="spinerCursos" />

    <Spinner
        android:id="@+id/spUnidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="spinerUnidades" />

    <Spinner
        android:id="@+id/spClases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="spinerClases" />

    <Button
        android:id="@+id/btnVerPlanidicacion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_chico"
        android:text="Ver Clase Planificada" />

</LinearLayout>
